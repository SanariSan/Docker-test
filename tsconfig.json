{
	"extends": "./tsconfig-base.json",
	"compilerOptions": {
		//specific
		"target": "es6",
		"module": "CommonJS",
		"moduleResolution": "node",
		//static
		"resolveJsonModule": true,
		"allowJs": false,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "src",
		"outDir": "dist",
		"declaration": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"pretty": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
